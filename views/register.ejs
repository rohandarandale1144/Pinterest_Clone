<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[27vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-10 text-center font-semibold text-zinc-700 traking-tight capitalize leading-none">
        Create New Account
      </h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username" />
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email" />
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name" />
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password"
          placeholder="Password" />
        <input class="border-2 mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register"/>
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service & acknowledge you've read our Privacy Policy. Notice at collection.
        </p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have an account? Sign in</a>
    </div>
  </div>
  <% include ./partials/footer.ejs %>